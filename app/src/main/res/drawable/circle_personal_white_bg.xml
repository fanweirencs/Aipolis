<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"><!-- 左右边框框颜色值 -->
    <item>
        <shape>
            <corners android:radius="8dp" /><!-- 设置圆角半径 -->
            <solid android:color="#CCCCCC" /><!-- 填充的颜色 -->
        </shape>
    </item><!-- 主体背景颜色值 -->
    <item
        android:left="3dp"
        android:right="3dp"><!--边框里面背景颜色 白色-->
        <shape>
            <corners android:radius="8dp" /><!-- 设置圆角半径 -->
            <solid android:color="#fff" />
        </shape>
    </item>


</layer-list>