<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/help_bg"
    android:orientation="vertical">
    <!--顶部-->
    <include layout="@layout/pub_top"/>

    <!--水平线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"/>

    <!--标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/help_height"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/help_margin_top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 标题："
            android:textColor="#0385ff"
            android:textSize="@dimen/title_text_xh" />

        <EditText
            android:id="@+id/id_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="10"
            android:layout_height="match_parent"
            android:hint="十个字以内"
            android:background="@null"
            android:cursorVisible="true" >
        </EditText>
    </LinearLayout>

    <!--事件-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/help_margin_top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 事情："
            android:textColor="#0385ff"
            android:textSize="@dimen/title_text_xh" />

        <EditText
            android:id="@+id/id_content"
            android:layout_width="match_parent"
            android:gravity="start"
            android:padding="@dimen/activity_padding_small"
            android:hint="输入求助事件的详细信息"
            android:layout_height="match_parent"
            android:background="@null"
            android:cursorVisible="true"
            android:inputType="textMultiLine">
        </EditText>
    </LinearLayout>
    <!--标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/help_margin_top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 备注："
            android:textColor="#0385ff"
            android:textSize="@dimen/title_text_xh" />

        <!--备注-->
        <EditText
            android:id="@+id/id_remark"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:padding="@dimen/activity_padding_small"
            android:hint="如果有什么要求、补充或者需要注意的点就写在这里(选填)"
            android:gravity="top"
            android:background="@null"
            android:cursorVisible="true" >
        </EditText>
    </LinearLayout>


</LinearLayout>