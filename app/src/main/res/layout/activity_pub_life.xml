<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--顶部-->
    <include layout="@layout/pub_top" />

    <EditText
        android:id="@+id/id_life_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_padding_small"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:background="@null"
        android:gravity="top"
        android:hint="@string/this_time_you_want_to_say"
        android:maxLines="5"
        android:minLines="5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:clickable="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_padding_small"
        android:background="@color/colorPrimary"/>

    <GridView
        android:id="@+id/lv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_weight="1"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="2dp" />
    <!--发布 按钮 进度条-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/activity_padding_big"
        android:layout_marginRight="@dimen/activity_padding_big"
        android:src="@drawable/plus"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="#33728dff" />
    <!--app:elevation="6dp"-->
    <!--app:pressedTranslationZ="12dp"-->


</LinearLayout>