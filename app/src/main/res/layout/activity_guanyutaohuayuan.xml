<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    android:orientation="vertical">

    <!--顶部-->
    <include layout="@layout/content_top" />


    <!--滑动 文字 图片-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_padding_big"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_padding_big"
        android:paddingRight="@dimen/activity_padding_big"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--文字-->
            <TextView
                android:id="@+id/tv01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:lineSpacingMultiplier="1.5"
                android:singleLine="false"
                android:text="@string/guanyutaohuayuan"
                android:textColor="#0385ff"
                android:textSize="16sp" />
            <!--图片-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_padding_big"
                android:src="@drawable/slogan" />
        </LinearLayout>


    </ScrollView>


    <!--注册按钮-->
    <Button
        android:id="@+id/id_login"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_padding_small"
        android:background="@drawable/circle_login"
        android:gravity="center"
        android:onClick="register_btn"
        android:text="注册入居"
        android:textColor="@color/colorWhite" />


</LinearLayout>